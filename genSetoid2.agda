data IsoList : Setoid → Setoid → Set where
  empty : ∀ S → IsoList S S
  plus  : ∀ {Q R S} → Iso Q R → IsoList R S → IsoList Q S

append : ∀ {Q R S} → IsoList Q R → IsoList R S → IsoList Q S
append (empty _) l = l
append (plus φ l) m = plus φ (append l m)

flatten : ∀ {R S} → IsoList R S → Iso R S
flatten (empty S) = id-iso S
flatten (plus x p) = comp-iso (flatten p) x

reverse : ∀ {R S} → IsoList R S → IsoList S R
reverse (empty S) = empty S
reverse (plus x l) = append (reverse l) (plus (inv-iso x) (empty _))

mapIso* : ∀ {A B C D} → IsoList A B → IsoList C D → IsoList (ISO A C) (ISO B D)
mapIso* (empty S) (empty D) = empty _
mapIso* (empty S) (plus x m) = plus (Iso* (id-iso S) x) (mapIso* (empty S) m)
mapIso* (plus x l) (empty S) = plus (Iso* x (id-iso S)) (mapIso* l (empty S))
mapIso* (plus x l) (plus x₁ m) = plus (Iso* x x₁) (mapIso* l m)

postulate flatten-mapIso* : ∀ {A B C D} (l : IsoList A B) (m : IsoList C D) →
                          E (ISO (ISO A C) (ISO B D)) (flatten (mapIso* l m)) (Iso* (flatten l) (flatten m))
