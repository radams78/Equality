Sigma-GP : ∀ G → Fibra-GP G → Graph
Sigma-GP G φ = record { 
  Vertex = Σ[ g ∈ Vertex G ] FibGP φ g ; 
  Edge = λ { (g , _) (g' , _) → Edge G g g' } }

data EdgeSig G (A : Fibra-GS G) : Σ[ g ∈ Vertex G ] El (FibGS A g) → Σ[ g ∈ Vertex G ] El (FibGS A g) → Set where
  horiz : ∀ {g g' a} (e : Edge G g g') → EdgeSig G A (g , a) (g' , transport (flatten (SubGS A e)) a)
  vert  : ∀ {g a a'} → E (FibGS A g) a a' → EdgeSig G A (g , a) (g , a')

π₁ : ∀ G A x y → EdgeSig G A x y → Path G (proj₁ x) (proj₁ y)
π₁ G A _ _ (horiz e) = single e
π₁ G A _ _ (vert x) = empty _

π₂ : ∀ G A x y (e : EdgeSig G A x y) → proj₂ x ~< flatten (SUBGS A (π₁ G A x y e)) > proj₂ y
π₂ G A _ _ (horiz e) = iso-transport (flatten (SubGS A e)) _
π₂ G A _ _ (vert x) = x

Sigma-GS : ∀ G → Fibra-GS G → Graph
Sigma-GS G A = record { 
  Vertex = Σ[ g ∈ Vertex G ] El (FibGS A g) ; 
  Edge = EdgeSig G A }

